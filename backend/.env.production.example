# ============================================
# CONFIGURACIÓN DE PRODUCCIÓN PARA RAILWAY
# ============================================
# Copia estas variables en Railway → Variables
# ============================================

# Aplicación
APP_NAME="Sistema de Citas"
APP_ENV=production
APP_DEBUG=false
APP_KEY=base64:IELATxnf9G3fGLgqR4uhva8YnLtnoUVGavZOJwZw2vY=
APP_URL=${{RAILWAY_PUBLIC_DOMAIN}}
APP_TIMEZONE=America/Bogota

# Base de Datos (Railway configura automáticamente MySQL)
# Railway usa DATABASE_URL automáticamente
# No necesitas configurar estas manualmente si usas MySQL de Railway:
# DB_CONNECTION=mysql
# DB_HOST=${MYSQLHOST}
# DB_PORT=${MYSQLPORT}
# DB_DATABASE=${MYSQLDATABASE}
# DB_USERNAME=${MYSQLUSER}
# DB_PASSWORD=${MYSQLPASSWORD}

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=info

# Session
SESSION_DRIVER=cookie
SESSION_LIFETIME=120

# Cache
CACHE_DRIVER=file
QUEUE_CONNECTION=sync

